#include "main.h"
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

/**
 * main - Entry point of the program
 *
 * This function prints the alphabet, in lowercase, followed by a new line.
 *
 * Return: 0 on success, otherwise a non-zero value
 */
void print_alphabet(void)
{
	/*code to print the alpahbet in lowercase folloed by a newline*/
	char c = 'a';
	/* using the while loop*/
	while (c <= 'z')
	{
		_putchar(c);
		++c;
	}
	_putchar('\n');
}
